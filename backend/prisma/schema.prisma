generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  role  Role   @default(USER)

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
